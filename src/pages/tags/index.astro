---
import { getCollection } from 'astro:content';
import Navigation from '../../components/Navigation.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog');
const allTags = [...new Set(posts.flatMap(post => post.data.tags))];
const sortedTags = allTags.sort((a, b) => a.localeCompare(b));
---

<BaseLayout title="All Tags - Camilli.dev" description="Browse all blog post tags">
  <Navigation />
  
  <main class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <div class="flex items-center gap-4 mb-6">
        <a 
          href="/" 
          class="text-blue-600 dark:text-blue-400 hover:underline"
        >
          ‚Üê Back to all posts
        </a>
      </div>
      
      <h1 class="text-4xl font-bold mb-4">All Tags</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        Browse posts by topic
      </p>
    </div>
    
    <div class="flex flex-wrap gap-3">
      {sortedTags.map((tag) => (
        <a 
          href={`/tags/${tag.toLowerCase()}/`}
          class="px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-base rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
        >
          #{tag}
        </a>
      ))}
    </div>
    
    {sortedTags.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400">No tags found.</p>
        <a href="/" class="text-blue-600 dark:text-blue-400 hover:underline mt-4 inline-block">
          View all posts
        </a>
      </div>
    )}
  </main>
</BaseLayout>